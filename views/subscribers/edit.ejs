<form action="`/subscribers/${subscriber._id}/update?_method=PUT`" method="POST">
<h2>Edit subscribers:</h2>
<label for="inputName">Name</label>
<input type="text" id="inputName" name="name" value="<%=subscriber.name%>" placeholder="Name" autofocus>
<label for="inputEmail">Email address</label>
<input type="email" id="inputEmail" name="email" value="<%=subscriber.email%>" placeholder="Email address" required>
<label for="inputZipCode">Zip Code</label>
<input type="text" id="inputZipCode" name="zipCode"value="<%=subscriber.zipCode%>"  pattern="\d*" placeholder="Zip Code" required>
<button type="submit">Save</button>
</form>
