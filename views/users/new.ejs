<div class="data-form">
    <form action="/users/create" method = "POST">
        <h2>Create a new user:</h2>
        <label for="inputFirstName">First Name</label>
        <input type="text" id="inputFirstName" name="first" placeholder="First" autofocus>
        <label for="inputLastName">Last Name:</label>
        <input type="text" id="inputLastName" name="last" placeholder="Last">
        <label for="inputPasswod">Password</label>
        <input type="password" name="password" id="inputPassword" placeholder="Password" required>
        <label for="inputEmail">Email address</label>
        <input type="email" id="inputEmail" name="email" placeholder="Email address" required>
        <label for="inputZipCode">Zip Code</label>
        <input type="text" id="inputZipCode" name="zipCode" pattern="\d*" placeholder="Zip Code" required>
        <button type="submit">Sign in</button>
    </form>
</div>