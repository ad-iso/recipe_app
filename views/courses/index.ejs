<h2 class="center">Courses Table</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Max Students</th>
            <th>Cost</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% courses.forEach(courses => { %>
            <tr>
                <td><%=courses.title %></td>
                <td><%=courses.description %></td>
                <td><%=courses.maxStudents %></td>
                <td><%=courses.cost %></td>
                <td><a href="<%= `courses/${course._id}/edit` %>">Edit</a></td>
                <td><a href="<%= `courses/${course._id}/delete?_method=DELETE` %>" 
                    onclick="return confirm(`Are you sure you want to delete this record?`)">Delete</a></td>
            </tr>
       <% }); %>
    </tbody>
</table>