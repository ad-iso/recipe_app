<div class="data-form">
    <form action="/courses/create" method="POST">
    <h2>Create a new Course</h2>
    <label for="inputTitle">Title</label>
    <input type="text" id="inputTitle" name="title" placeholder="Title" autofocus>
    <label for="txtarDescription">Description</label>  
    <textarea name="description" id="txtarDescription" cols="30" rows="10" placeholder="Course Description" required></textarea>
    <label for="inputMaxStudents">Max Students</label>
    <input type="text" id="inputMaxStudents" name="maxStudents" placeholder="Max students" required>
    <label for="inputCost">Cost</label>
    <input type="text" id="inputCost" name="cost" placeholder="Cost" required>
    <button type="submit">Create</button>
    </form>
</div>